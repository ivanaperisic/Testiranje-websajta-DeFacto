	    try {
	 			Thread.sleep(2500);
	 		} catch (InterruptedException e) {
	 			// TODO Auto-generated catch block
	 			e.printStackTrace();
	 		}
	    assertEquals(driver.findElements(By.className("swym-title-1")).size(), 1);
	  }
	  
